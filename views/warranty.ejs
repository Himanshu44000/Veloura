        .timeline {
            position: relative;
            padding: 20px 0;
        }

        .timeline-item {
            margin-bottom: 40px;
            padding-left: 50px;
            position: relative;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 15px;
            height: 15px;
            background: linear-gradient(135deg, #d4af37, #ffd700);
            border-radius: 50%;
            border: 3px solid white;
            box-shadow: 0 0 0 3px #d4af37;
        }

        .timeline-item::after {
            content: '';
            position: absolute;
            left: 6px;
            top: 15px;
            width: 3px;
            height: 25px;
            background: #d4af37;
        }

        .timeline-item:last-child::after {

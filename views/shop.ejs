    <!-- JavaScript -->
    <script>
        // Filter functionality
        function toggleFilter() {
            const filterContent = document.getElementById('filterContent');
            filterContent.classList.toggle('show');
        }

        function applyFilters() {
            const url = new URL(window.location);
            
            // Get category filters
            const categories = Array.from(document.querySelectorAll('input[name="category"]:checked'))
                .map(cb => cb.value);
            
            // Get price sort
            const priceSort = document.querySelector('input[name="priceSort"]:checked');
            
            // Get stock filters
            const stockFilters = Array.from(document.querySelectorAll('input[name="stock"]:checked'))
                .map(cb => cb.value);
            
            // Get rating filters
            const ratingFilters = Array.from(document.querySelectorAll('input[name="rating"]:checked'))
                .map(cb => cb.value);
            
            // Get special filters
            const featured = document.querySelector('input[name="featured"]:checked');
            const discount = document.querySelector('input[name="discount"]:checked');
            
            // Clear existing filter params
            url.searchParams.delete('category');
            url.searchParams.delete('priceSort');
            url.searchParams.delete('stock');
            url.searchParams.delete('rating');
            url.searchParams.delete('featured');
            url.searchParams.delete('discount');
            url.searchParams.delete('page');
            
            // Add new filter params
            if (categories.length > 0) {
                categories.forEach(cat => url.searchParams.append('category', cat));
            }
            
            if (priceSort) {
                url.searchParams.set('priceSort', priceSort.value);
            }
            
            if (stockFilters.length > 0) {
                stockFilters.forEach(stock => url.searchParams.append('stock', stock));
            }
            
            if (ratingFilters.length > 0) {
                ratingFilters.forEach(rating => url.searchParams.append('rating', rating));
            }
            
            if (featured) {
                url.searchParams.set('featured', 'true');
            }
            
            if (discount) {
                url.searchParams.set('discount', 'true');
            }
            
            // Update filter count
            updateFilterCount();
            
            // Redirect with filters
            window.location = url.toString();
        }

        function clearAllFilters() {
            // Clear all checkboxes and radio buttons
            document.querySelectorAll('#filterContent input[type="checkbox"], #filterContent input[type="radio"]')
                .forEach(input => input.checked = false);
            
            // Redirect without filters
            const url = new URL(window.location);
            const searchTerm = url.searchParams.get('search');
            
            let newUrl = '/shop';
            if (searchTerm) {
                newUrl += '?search=' + encodeURIComponent(searchTerm);
            }
            
            window.location = newUrl;
        }

        function updateFilterCount() {
            const filterCount = document.querySelectorAll('#filterContent input:checked').length;
            const filterCountElement = document.getElementById('filterCount');
            
            if (filterCount > 0) {
                filterCountElement.textContent = filterCount;
                filterCountElement.classList.remove('hidden');
            } else {
                filterCountElement.classList.add('hidden');
            }
        }

        // Close filter dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const filterDropdown = document.querySelector('.filter-dropdown');
            const filterContent = document.getElementById('filterContent');
            
            if (!filterDropdown.contains(event.target)) {
                filterContent.classList.remove('show');
            }
        });

        // Initialize filter count on page load
        document.addEventListener('DOMContentLoaded', function() {
            updateFilterCount();
            
            // Apply URL filters to checkboxes
            const url = new URL(window.location);
            
            // Set category filters
            const categories = url.searchParams.getAll('category');
            categories.forEach(cat => {
                const checkbox = document.querySelector(`input[name="category"][value="${cat}"]`);
                if (checkbox) checkbox.checked = true;
            });
            
            // Set price sort
            const priceSort = url.searchParams.get('priceSort');
            if (priceSort) {
                const radio = document.querySelector(`input[name="priceSort"][value="${priceSort}"]`);
                if (radio) radio.checked = true;
            }
            
            // Set stock filters
            const stockFilters = url.searchParams.getAll('stock');
            stockFilters.forEach(stock => {
                const checkbox = document.querySelector(`input[name="stock"][value="${stock}"]`);
                if (checkbox) checkbox.checked = true;
            });
            
            // Set rating filters
            const ratingFilters = url.searchParams.getAll('rating');
            ratingFilters.forEach(rating => {
                const checkbox = document.querySelector(`input[name="rating"][value="${rating}"]`);
                if (checkbox) checkbox.checked = true;
            });
            
            // Set special filters
            if (url.searchParams.get('featured') === 'true') {
                const checkbox = document.querySelector('input[name="featured"]');
                if (checkbox) checkbox.checked = true;
            }
            
            if (url.searchParams.get('discount') === 'true') {
                const checkbox = document.querySelector('input[name="discount"]');
                if (checkbox) checkbox.checked = true;
            }
            
            updateFilterCount();
        });

        // Add to cart functionality
        function addToCart(productId) {
            fetch(`/addtocart/${productId}`, {
                method: 'GET'
            })
            .then(response => {
                if (response.ok) {
                    showNotification('Added to cart!', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    throw new Error('Failed to add to cart');
                }
            })
            .catch(error => {
                showNotification('Error adding to cart', 'error');
            });
        }

        // Add to wishlist functionality
        function addToWishlist(productId) {
            fetch(`/addtowishlist/${productId}`, {
                method: 'GET'
            })
            .then(response => {
                if (response.ok) {
                    showNotification('Added to wishlist!', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    throw new Error('Failed to add to wishlist');
                }
            })
            .catch(error => {
                showNotification('Error adding to wishlist', 'error');
            });
        }

        // Notification system
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 transition-all duration-300 ${
                type === 'success' ? 'bg-green-500 text-white' :
                type === 'error' ? 'bg-red-500 text-white' :
                type === 'warning' ? 'bg-yellow-500 text-black' :
                'bg-blue-500 text-white'
            }`;
            notification.textContent = message;
            
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.opacity = '0';
                setTimeout(() => {
                    if (document.body.contains(notification)) {
                        document.body.removeChild(notification);
                    }
                }, 300);
            }, 3000);
        }

        // Auto-hide flash messages
        setTimeout(() => {
            const flashMessages = document.querySelectorAll('[class*="bg-green-100"]');
            flashMessages.forEach(message => {
                message.style.transition = 'opacity 0.5s ease';
                message.style.opacity = '0';
                setTimeout(() => {
                    if (message.parentNode) {
                        message.parentNode.removeChild(message);
                    }
                }, 500);
            });
        }, 5000);
    </script>

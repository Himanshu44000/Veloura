        .font-playfair { font-family: 'Playfair Display', serif; }
        .font-inter { font-family: 'Inter', sans-serif; }
        
        .premium-gradient {
            background: linear-gradient(135deg, #1e1e1e 0%, #2d2d2d 50%, #1a1a1a 100%);
        }
        
        .gold-gradient {
            background: linear-gradient(135deg, #d4af37 0%, #ffd700 50%, #b8860b 100%);
        }

        .cream-bg {
            background: linear-gradient(135deg, #faf7f2 0%, #f5f1ea 50%, #f0ebe3 100%);
        }

        /* Dashboard cards styling */
        .dashboard-card {
            transition: all 0.3s ease;
            border: 1px solid #e5e7eb;
            background: linear-gradient(135deg, #ffffff 0%, #f9fafb 100%);
        }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            border-color: #fbbf24;
        }

        /* Notification badge styling */
        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: #ef4444 !important;
            color: white !important;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            display: flex !important;
            align-items: center;
            justify-content: center;
            font-size: 10px;
            font-weight: bold;
            transition: all 0.3s ease;
            z-index: 10;
        }

        .notification-badge.hidden {
            display: none !important;
        }

        /* Stats counter styling */
        .stat-number {
            font-size: 2.5rem;
            font-weight: bold;
            background: linear-gradient(135deg, #d4af37 0%, #ffd700 50%, #b8860b 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Profile avatar styling */
        .profile-avatar {
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #d4af37 0%, #ffd700 50%, #b8860b 100%);
            border: 4px solid white;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        /* Fixed profile card to handle long text */
        .profile-card {
            min-height: auto;
            word-wrap: break-word;
            overflow-wrap: break-word;
        }

        .profile-email {
            word-break: break-all;
            max-width: 100%;
            display: block;
        }

        .profile-name {
            word-wrap: break-word;
            max-width: 100%;
            display: block;
        }

        /* Order status badges */
        .status-delivered { @apply text-green-600 bg-green-100; }
        .status-shipped { @apply text-blue-600 bg-blue-100; }
        .status-processing { @apply text-yellow-600 bg-yellow-100; }
        .status-cancelled { @apply text-red-600 bg-red-100; }
    </style>

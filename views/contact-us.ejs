    <script>
        // EmailJS config
        const SERVICE_ID = 'service_qz1igca';        // Your EmailJS Service ID
        const TEMPLATE_ID = 'template_ey5vf5w';      // Your EmailJS Template ID
        const PUBLIC_KEY = 'iqY_NUfeZYmEww0W4';      // Your EmailJS Public Key

        // Fallback loader if the CDN failed
        async function ensureEmailJS() {
            if (window.emailjs) return window.emailjs;

            const primary = 'https://cdn.jsdelivr.net/npm/@emailjs/browser@3/dist/email.min.js';
            const fallback = 'https://unpkg.com/@emailjs/browser@3/dist/email.min.js';

            const loadScript = (src) => new Promise((resolve, reject) => {
                const s = document.createElement('script');
                s.src = src;
                s.onload = () => resolve(window.emailjs);
                s.onerror = reject;
                document.head.appendChild(s);
            });

            try {
                return await loadScript(primary);
            } catch (e) {
                console.warn('Primary EmailJS CDN failed, trying fallback...', e);
                return await loadScript(fallback);
            }
        }

        // Handle form submission
        document.getElementById('contactForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const submitBtn = document.getElementById('submitBtn');
            const originalText = submitBtn.textContent;
            submitBtn.textContent = 'Sending...';
            submitBtn.disabled = true;

            // Get form values
            const templateParams = {
                from_name: document.querySelector('input[name="name"]').value,
                from_email: document.querySelector('input[name="email"]').value,
                phone: document.querySelector('input[name="phone"]').value,
                subject: document.querySelector('select[name="subject"]').value,
                message: document.querySelector('textarea[name="message"]').value,
                subscribe: document.querySelector('input[name="subscribe"]').checked ? 'Yes' : 'No'
            };

            // Debug log for troubleshooting
            console.log('Sending email with params:', templateParams);

            try {
                const ej = await ensureEmailJS();
                if (!ej) throw new Error('EmailJS failed to load. Check CDN/network.');

                if (PUBLIC_KEY) {
                    ej.init(PUBLIC_KEY);
                }

                const response = await ej.send(SERVICE_ID, TEMPLATE_ID, templateParams);
                console.log('Email sent successfully!', response);
                showNotification('Message sent successfully! We\'ll get back to you soon.', 'success');
                document.getElementById('contactForm').reset();
            } catch (error) {
                console.error('Failed to send email:', error);
                const message = error?.text || error?.message || 'Failed to send message. Please try again or contact us directly.';
                showNotification(message, 'error');
            } finally {
                submitBtn.textContent = originalText;
                submitBtn.disabled = false;
            }
        });

        // Notification function
        function showNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            notification.textContent = message;
            
            // Set background color based on type
            if (type === 'success') {
                notification.className = 'fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 bg-green-500 text-white opacity-100 visible transition-all duration-300';
            } else if (type === 'error') {
                notification.className = 'fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 bg-red-500 text-white opacity-100 visible transition-all duration-300';
            } else {
                notification.className = 'fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 bg-blue-500 text-white opacity-100 visible transition-all duration-300';
            }

            // Hide notification after 4 seconds
            setTimeout(() => {
                notification.className = 'fixed top-4 right-4 p-4 rounded-lg shadow-lg z-50 transition-all duration-300 opacity-0 invisible';
            }, 4000);
        }
